{
  "_comment": "Based on https://vega.github.io/vega-lite/examples/bar_aggregate_sort_by_encoding.html",
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A bar chart that sorts the y-values by the x-values.",
    "data": {
        "values": "<DVC_METRIC_DATA>"
    },
    "title": "<DVC_METRIC_TITLE>",
    "transform": [
    {
      "aggregate": [{
       "op": "mean",
       "field": "log_posterior",
       "as": "lp"
      }],
      "groupby": ["expression"]
    }
  ],"height": {"step": 17},
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "expression",
      "type": "nominal",
      "sort": "-y",
      "axis": { "labels": false }
    },
    "y": {
      "field": "lp",
      "type": "ordinal",
      "title": "log posterior",
      "sort": "-y"
    }
  }
}
